extends layouts/main.pug

block styles 
    link(rel="stylesheet", href="/css/product.css")

block content 
    main 
        if prods.length > 0
            .grid
                each product in prods
                    article.card.product-item
                        header.card__header  
                            h1.product__title #{prods.title}
                        .card__image 
                            img(src="https://cdn.pixabay.com/photo/2016/11/29/03/56/bible-1867195_960_720.jpg", alt="A book")
                        .card__content 
                            h2.product__price 10.00â‚¬
                            p.product__description Test
                        .card__actions 
                            button.btn Add to Card
        else 
            h1 No Products
